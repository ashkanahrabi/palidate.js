{
  "name": "palidation.js",
  "version": "1.0.0",
  "description": "Persian validations and util functions",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "start": "tsc && node dist/index.js",
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "posttest": "./codecov -t $(grep CODECOV_TOKEN .env | cut -d '=' -f2)",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build && typedoc",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashkanahrabi/palidation.js.git"
  },
  "author": "Ashkan Ahrabi",
  "keywords": [
    "Validation",
    "Persian",
    "Persian Validation",
    "Farsi Validation"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ashkanahrabi/palidation.js/issues"
  },
  "homepage": "https://github.com/ashkanahrabi/palidation.js#readme",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "codecov": "^3.8.3",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.3"
  }
}
