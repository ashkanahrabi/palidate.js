{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "./lib",
    "baseUrl": "src",
    "sourceMap": false,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true
  }
}